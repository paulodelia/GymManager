{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        <!-- unsplash gym - 3465564 -->

        <section 
            class="avatar" 
            style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover">
            
        </section>

        <section class="details">
            
            <h3>Detalhes</h3>

            <div class="item">  
                <div>Instrutor</div>
                <div>{{ instructor.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ instructor.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                
                <span>{{ "Masculino" if instructor.gender == "M" else "Feminino" }}</span>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    {% for service in instructor.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                
                <div>{{ instructor.created_at }}</div>
            </div>

            <a class="button" href="/instructors/{{ instructor.id }}/edit">Editar</a>

        </section>

    </form>

{% endblock content %}

