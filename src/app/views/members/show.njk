{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/members">
        <!-- unsplash gym - 3465564 -->

        <section 
            class="avatar" 
            style="background: url({{ member.avatar_url }}) no-repeat center center / cover">
            
        </section>

        <section class="details">
            
            <h3>Detalhes</h3>

            <div class="item">  
                <div>Membro</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ member.email }}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ member.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                
                <span>{{ "Masculino" if member.gender == "M" else "Feminino" }}</span>
            </div>

            <div class="item">
                <div>Tipo sanguíneo</div>
                <div>{{ member.blood }}</div>
            </div>

            <div class="item">
                <div>Peso (kg)</div>
                <div>{{ member.weight }}</div>
            </div>

            <div class="item">
                <div>Altura (cm)</div>
                <div>{{ member.height }}</div>
            </div>

            <div class="item">
                <div>Aluno de</div>
                <div>{{ member.instructor_name }}</div>
            </div>

            <a class="button" href="/members/{{ member.id }}/edit">Editar</a>

        </section>

    </form>

{% endblock content %}

